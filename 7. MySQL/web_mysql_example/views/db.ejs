<!DOCTYPE html>
<%# EJS: Styling generated by Gemini. %>
<!-- HTML: Styling generated by Gemini. -->
<html>
  <head>
    <title>The Quotations Database</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/my_styles.css">
  </head>
  <body class="w3-container">

    <h1 class="w3-center w3-xxlarge">The Quotations Database</h1>

    <table class="w3-table w3-bordered w3-striped w3-border w3-hoverable centered-table">
      <thead>
        <tr class="w3-light-grey">
          <th>ID</th>
          <th>Author</th>
          <th>Excerpt</th>
        </tr>
      </thead>
      <tbody>
        <% for (const row of rows) { %>
          <tr>
            <td><%= row.id %></td>
            <td><%= row.author %></td>
            <td><%= row.excerpt %></td>
          </tr>
        <% } %>
      </tbody>
    </table>

  </body>
</html>